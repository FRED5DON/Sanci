<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hb_rg_m_detail_root_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/common_color_e93030" >

        <TextView
            android:id="@+id/hb_llj_reminds_topbar_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/common_color_e93030"
            android:text="送礼提醒"
            android:textColor="@color/common_color_ffffff"
            android:textSize="@dimen/common_font_20" />

        <RelativeLayout
            android:id="@+id/hb_llj_reminds_back_rl"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="27dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/home_nav_icon_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hb_llj_reminds_right_ly"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/llj_llj_add" />
        </RelativeLayout>
    </RelativeLayout>

    <com.hb_module_llj.view.subview.CommonLstSubView
        android:id="@+id/page_llj_invate_lst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#43949494"
        android:dividerHeight="1dp"
        android:scrollbars="none" >
    </com.hb_module_llj.view.subview.CommonLstSubView>

</LinearLayout>