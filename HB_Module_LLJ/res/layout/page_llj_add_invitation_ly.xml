<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hb_rg_m_detail_root_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/common_color_e93030" >

        <TextView
            android:id="@+id/hb_llj_addremind_topbar_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
             android:text="内容编辑"
            android:background="@color/common_color_e93030"
            android:textColor="@color/common_color_ffffff"
            android:textSize="@dimen/common_font_20" />

        <RelativeLayout
            android:id="@+id/hb_rg_launch_back_rl"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/home_nav_icon_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/hb_llj_addremind_topbar_righttxt_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="预览"
            android:textColor="@color/common_color_ffffff"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/hb_hb_rg_m_moduser_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新郎"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />

                <EditText
                    android:id="@+id/hb_llj_addremind_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:background="@null"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="#4cd3d3d3" />
            <LinearLayout
                android:id="@+id/hb_hb_rg_m_moduser_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新娘"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />

                <EditText
                    android:id="@+id/hb_llj_addremind_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:background="@null"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/hb_hb_rg_m_moduser_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="婚礼时间"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />

                <EditText
                    android:id="@+id/hb_llj_addremind_datetime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="未选择"
                    android:textColor="#434343"
                    android:textColorHint="#949494"
                    android:textSize="@dimen/common_font_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="#4cd3d3d3" />

            <LinearLayout
                android:id="@+id/hb_hb_rg_m_moduser_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="酒店名称"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />

                <TextView
                    android:id="@+id/hb_llj_addremind_reminddatetime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#434343"
                    android:textColorHint="#949494"
                    android:textSize="@dimen/common_font_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="#4cd3d3d3" />

            <LinearLayout
                android:id="@+id/hb_hb_rg_m_moduser_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="地址"
                    android:textColor="#434343"
                    android:textSize="@dimen/common_font_15" />

                <EditText
                    android:id="@+id/hb_llj_addremind_repeattimes_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="#434343"
                    android:textColorHint="#949494"
                    android:textSize="@dimen/common_font_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="#4cd3d3d3" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="婚礼照片"
            android:textColor="#434343"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/hb_llj_addremind_msgs_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start"
            android:minLines="5"
            android:singleLine="false"
            android:textColor="#434343"
            android:textSize="15dp" >
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                
                 android:background="@color/common_color_ffffff">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="生成"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:textColor="@color/common_color_e93030"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="生成并分享"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:gravity="center"
                     android:textColor="@color/common_color_e93030"
                    android:layout_gravity="center"/>
            </LinearLayout>
            
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>